@model Take02.ViewModels.RecipeViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">Library*</label>
                @Html.DropDownList("LibraryId", Model.LibrarySelectListItems, null, new { @class = "form-control" })
                <span asp-validation-for="Library.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Name*</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            @{
                int count = Model.IngredientViewModels.Count;
                bool addIngredientShown = false;
            }
            @foreach (var ingredientVM in Model.IngredientViewModels)
            {
                <hr />
                <div class="form-group">
                    <label class="control-label">Ingredient</label>
                    <input type="hidden" asp-for="@ingredientVM.Number" />
                    <br />
                    <label class="control-label">Quantity</label>
                    <input asp-for="@ingredientVM.Quantity" class="form-control" />
                    <span asp-validation-for="@ingredientVM.Quantity" class="text-danger"></span>
                    <br />
                    <label class="control-label">Unit</label>
                    @Html.DropDownList("UnitId", Model.UnitSelectListItems, ingredientVM.Unit.Name, new { @class = "form-control" })
                    <span asp-validation-for="@ingredientVM.Unit.Id" class="text-danger"></span>
                    <br />
                    <label class="control-label">Component*</label>
                    @Html.DropDownList("ComponentId", Model.ComponentSelectListItems, ingredientVM.Component.Name, new { @class = "form-control" })
                    <span asp-validation-for="@ingredientVM.Component.Id" class="text-danger"></span>
                    <span asp-validation-for="IngredientViewModels" class="text-danger"></span>
                    @{
                        int index = Model.IngredientViewModels.IndexOf(ingredientVM);
                        if (index > 0)
                        {
                            <br />
                            <a asp-action="MoveUp">Move Up</a>
                        }
                        if (index < count - 1)
                        {
                            <br />
                            <a asp-action="MoveDown">Move Down</a>
                        }
                        if (index == count - 1)
                        {
                            <br />
                            <a id="addIngredient" href="#">Add Ingredient</a>
                            addIngredientShown = true;
                        }
                    }
                </div>
            }
            @if (!addIngredientShown)
            {
                <hr />
                <a id="addIngredient" href="#">Add Ingredient</a>
                addIngredientShown = true;
            }
            <hr />
            <div class="form-group">
                <label asp-for="Instructions" class="control-label"></label>
                <input asp-for="Instructions" class="form-control" />
                <span asp-validation-for="Instructions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Source" class="control-label"></label>
                <input asp-for="Source" class="form-control" />
                <span asp-validation-for="Source" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
